extends layouts/default.jade

block site-content
  section.site-content(
    class=`site-content__home`
  )
    section.site-content__section.hero
      h1.hero__heading Enrollment for #[em Refocus] is currently closed.
      h2.hero__subheading #[em Refocus] is a step-by-step system for ambitious people who want to get unstuck, find more time for the things that matter, and contribute their most valuable work to the world.#[br.hero__desktop-only]
      p.hero__lede We’re currently not accepting new people into the #[em Refocus] system so we can focus on supporting our existing members. But don’t worry: click below to enter your name and email, and we’ll let you know as soon as #[em Refocus] opens again
      a.hero__button(href="#opt-in") Get Notified
    //- section.site-content__section.hero
      h1.hero__heading Refocus is coming soon.
      h2.hero__subheading A step-by-step system for ambitious people who want to get unstuck, find more time for the things that matter, and contribute their most valuable work to the world.#[br.hero__desktop-only]
      p.hero__lede It all kicks off in April with a 4-day live event.
      a.hero__button(href="/bootcamp/") Join the Bootcamp



    section.site-content__section.body-copy
      .author-photos
        p.author-photos__text Created by
        img.author-photos__headshot(
          src="/images/nate-green-200.jpg" 
          alt="Nate Green"
        )
        img.author-photos__headshot(
          src="/images/jason-lengstorf-200.jpg" 
          alt="Jason Lengstorf"
        )
        p.author-photos__text
          a(href="http://thenategreenexperience.com/") Nate Green
          |  and 
          a(href="https://lengstorf.com/") Jason Lengstorf
          | .

    script(src="https://app.convertkit.com/assets/CKJS4.js?v=21")
    aside.opt-in.ck_form.site-content__section
      h2.opt-in__heading Get notified when #[em Refocus] is open again.
      p.opt-in__lede Enter your name and email below to get first access to #[em Refocus].

      form.opt-in__form.ck_subscribe_form(
        id="ck_subscribe_form"
        action="https://app.convertkit.com/landing_pages/45532/subscribe"
        data-remote="true"
      )
        .ck_errorArea
          #ck_error_msg(style="display: none;")
            p There was a problem submitting the form. Please check your info and try again.
        .opt-in__input-group.ck_control_group
          label.opt-in__label.ck_label.name(for="ck_firstNameField") First Name
          input.opt-in__input.opt-in__input.ck_first_name(
            type="text"
            id="ck_firstNameField"
            name="first_name"
            required
          )
        .opt-in__input-group.ck_control_group
          label.opt-in__label.ck_label.email(for="ck_emailField") Email Address
          input.opt-in__input.opt-in__input.ck_first_name(
            type="email"
            id="ck_emailField"
            name="email"
            required
          )

        input(
          type="hidden"
          id="ck_form_options"
          value="{&quot;form_style&quot;:&quot;naked&quot;,&quot;embed_style&quot;:&quot;inline&quot;,&quot;embed_trigger&quot;:&quot;scroll_percentage&quot;,&quot;scroll_percentage&quot;:&quot;70&quot;,&quot;delay_seconds&quot;:&quot;10&quot;,&quot;display_position&quot;:&quot;br&quot;,&quot;display_devices&quot;:&quot;all&quot;,&quot;days_no_show&quot;:&quot;15&quot;,&quot;converted_behavior&quot;:&quot;show&quot;}"
        )
        input(
          type="hidden"
          name="id"
          value="45532"
          id="landing_page_id"
        )

        button.subscribe_button.ck_subscribe_button.btn.fields.opt-in__submit(
          id="ck_subscribe_button"
        ) Keep Me in the Loop

        p.opt-in__privacy-notice
          small We will never share your personal information.
