  var navItems = [
    {
      id: 'day1',
      date: 'April 11',
      part: 'Lesson 1',
      title: 'Build Your Own Compass',
      link: '../day-1-compass/',
      open: true,
    },
    {
      id: 'day2',
      date: 'April 13',
